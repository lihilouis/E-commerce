
<div class="container mt-5">
  <div class="row">
    {{#each oderedProducts}}
    <div class="col-md-3">
      <div class="card" style="width: 18rem;">
        <img style="width:100px;height:100px;" src="/product-image/{{this._id}}.jpg">
        <div class="card-body">
          <h5 class="card-title">{{this.product.name}}</h5>
          <p class="card-text">{{this.price}}
            <p class="card-text">{{this.description}}
          </p>
       <button onclick="addTocart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
