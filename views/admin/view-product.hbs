
<section class="mt-5">
  <div class="container p-10 table-responsive">

    <div class="">
      <a href="/admin/add-product" class="btn btn-success">Add products</a>
    </div>
    <table class="table mt-3 p-10 mt-5" id="adminTable">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">description</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.price}}</td>
          <td>{{this.description}}</td>
          <td><img style="width:50px;height:50px" src="/product-image/{{this._id}}.jpg"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you sure you want to delete {{this.name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready(function () {
    $('#adminTable').DataTable();
  });
</script>